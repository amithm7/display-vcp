{
    "image": "debian:testing",
    "features": {
        // Adds GIT_EDITOR to /etc/bash.bashrc
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "username": "vscode",
            "uid": 1000,
            "gid": 1000
        },
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "postCreateCommand": "echo \"export GIT_EDITOR=\\\"vi\\\"\" >> ~/.bashrc; sudo apt-get update && sudo apt-get install -y clang-format vim build-essential cmake libkf6statusnotifieritem-dev libkf6coreaddons-dev && sudo apt-get clean",
    "customizations": {
        // Requires `ms-vscode-remote.remote-containers` installed in vscode (client)
        "vscode": {
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "xaver.clang-format"
            ]
        }
    },
    "remoteUser": "vscode"
}